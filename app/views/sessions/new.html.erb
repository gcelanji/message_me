<h4 class="ui center aligned medium icon header">
  <div class="header-text">Welcome to MessageMe - a <i>complete</i> Chat App</div>  
  <i class="circular orange power off icon"></i>
  Log in to continue
</h4>

<div class="ui placeholder segment">

  <div class="big ui two column very relaxed stackable grid">
    <div class="column">
    <%= form_with(scope: :session, url: login_path, class: "ui form", local: true, data: { turbo:false })  do |f| %>
        <div class="field">
          <%= f.label :username, "Username" %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, "Password" %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.submit "Login", class: "ui orange submit button" %>
      <% end %>
    </div>

    <div class="middle aligned column">
      <div class="ui orange big button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>

  </div>

  <div class="ui vertical divider">
    Or
  </div>

</div>